{{!-- Do not show the friends menu when not stretch as the dropdown requires place --}}
{{#if friends}}
  <span class="friendMenu">
    <div class="light-grey friend has-dropdown">
      <span class="label">{{i18n 'friend'}}</span>
      {{icon 'chevron-down'}}
      <ul class="dropdown">
        {{!-- redundant but allow to avoid having unfriend button alone, the risk to click it on mobile is too big  --}}
        {{#unless onUserProfile}}
          <li>
            <a class="select-2">
              {{icon 'user'}} {{i18n 'see profile'}}</span>
            </a>
          </li>
        {{/unless}}
        <li>
          <a class="unfriend action">
            {{icon 'minus'}} {{i18n 'unfriend'}}</span>
          </a>
        </li>
      </ul>
    </div>
  </span>
{{/if}}
{{#if userRequested}} 
  <a class="cancel action" title="{{i18n 'cancel friend request'}}">
    {{icon 'ban'}}<span class="label"> {{i18n 'cancel request'}}</span>
  </a>
{{/if}}
{{#if otherRequested}} 
  <a class="accept action" title="{{i18n 'accept friend request'}}">
    {{icon 'check'}}<span class="label"> {{i18n 'confirm'}}</span>
  </a>
  <a class="discard action" title="{{i18n 'discard friend request'}}">
    {{icon 'minus'}}<span class="label"> {{i18n 'decline'}}</span>
  </a>
{{/if}}
{{#if public}} 
  <a class="request action" title="{{i18n 'send friend request'}}">
    {{icon 'plus'}}<span class="label"> {{i18n 'add friend'}}</span>
  </a>
{{/if}}