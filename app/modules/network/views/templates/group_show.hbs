<div class="iconButtons">
  {{#if mainUserIsMember}}
    <a class="showGroupBoard" href="{{boardPathname}}"
    title="{{i18n 'settings'}}">{{icon 'cog'}}</a>
  {{/if}}
</div>
<div
{{#if picture}}
  class="cover"
  style="background-image: url('{{imgSrc picture 1600}}')"
{{/if}}
>
  <span class="name">{{name}}</span>
  {{#if description}}
    <p class="description">{{userContent description}}</p>
  {{/if}}
  {{partial 'network:group_stats' this}}
</div>

{{partial 'network:group_actions' this}}
